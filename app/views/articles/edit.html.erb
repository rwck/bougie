<div class="container" onmousedown="pressDown(this);" onmouseup="pressUp(this);" ontouchstart="pressDown(this);" touchend="pressUp(this);">

<h1>Editing article</h1>

<%= form_for :article, url: article_path(@article), method: :patch do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title, :class => "forms", :size => "75%" %>
  </p>

  <p>
    <%= f.label :text, "Text" %><br>
    <%= f.text_area :text, :rows => 25, :class => "forms", :size => "75%" %>
    <!-- :class => "forms"  -->
  </p>

  <p>
    <%= f.submit "Save changes" %>
  </p>

<% end %>

<%= link_to 'Back', articles_path %>

</div>
